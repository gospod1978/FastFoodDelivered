@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Streets.CreateStreetInputModel
@{
    this.ViewData["Title"] = "Street Create";
    var cities = Model.Cities.Select(x => new SelectListItem(x.CityName, x.Id.ToString()));
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="Create2">
    <div>
        <label asp-for="CityId"></label>
        <select asp-for="CityId" asp-items="cities" class="form-control"></select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>
<a class="btn btn-primary" asp-area="" asp-controller="Streets" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
<a class="btn btn-primary" asp-area="" asp-controller="Areas" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("All") @SharedLocalizer.GetLocalizedHtmlString("Area")</a>