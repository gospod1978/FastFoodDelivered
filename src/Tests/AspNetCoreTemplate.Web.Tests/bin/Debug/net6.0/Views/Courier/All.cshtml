@using AspNetCoreTemplate.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Couriers.CourierViewModel

@{
    this.ViewData["Title"] = $"All Couriers";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

@if (Model.Curiers.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var curier in Model.Curiers)
        {
            <div class="media col-md-4">
                <img src="@curier.Image" width="100" height="80" class="mr-3" alt="@curier.Name">
                <div class="media-body">
                    <h5 class="mt-0"><a href="">@curier.Name</a></h5>
                </div>
            </div>
        }
    </div>
}

<hr />
<div>
    <a class="btn btn-primary" asp-area="" asp-controller="Courier" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("CreateNewCourier")</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>