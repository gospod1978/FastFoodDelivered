@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Orders.AllOrdersViewModel

@{
    this.ViewData["Title"] = $"All Order By Category";

}
@if (this.TempData["InfoMessageApply"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageApply"]
    </div>
}

<div class="text-center">
    <h1 style="margin:20px;">@this.ViewData["Title"]</h1>
</div>
@if (Model.Orders.Count() == 0)
{

}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Menu")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Category")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Restaurant")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Price")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Delivery")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Total")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Description")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Details")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Details")</th>
                <th>@SharedLocalizer.GetLocalizedHtmlString("Purchase")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Name </td>
                    <td>@order.Category.Name</td>
                    <td>@order.RestaurantName</td>
                    <td>@order.Price</td>
                    <td>@order.DeliveryPrice</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.TimePrepartion</td>
                    <td>@order.ShortContent</td>
                    <td><a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id">Details</a></td>
                    <td><a class="btn btn-primary" asp-area="" asp-controller="Purchase" asp-action="Create" asp-route-id="@order.Id">Purchase</a></td>

                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" style="margin:20px;" asp-area="" asp-controller="Home" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
