@using AspNetCoreTemplate.Common
@using AspNetCoreTemplate.Data.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Purchases.AllPurchaseViewModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    this.ViewData["Title"] = "All Purchases By Status";
}
@if (this.TempData["InfoMessageApply"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageApply"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Purchase" asp-action="AllByData1" asp-route-id="1">@SharedLocalizer.GetLocalizedHtmlString("ToDay")</a>
<a class="btn btn-primary" asp-area="" asp-controller="Purchase" asp-action="AllByData1" asp-route-id="7">@SharedLocalizer.GetLocalizedHtmlString("LastWeek")</a>
<a class="btn btn-primary" asp-area="" asp-controller="Purchase" asp-action="AllByData1" asp-route-id="30">@SharedLocalizer.GetLocalizedHtmlString("LastMonth")</a>

