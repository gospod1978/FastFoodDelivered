@using AspNetCoreTemplate.Common
@using AspNetCoreTemplate.Data.Models
@using Microsoft.AspNetCore.Identity
@model AspNetCoreTemplate.Web.ViewModels.Purchases.AllPurchaseViewModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}
@if (this.TempData["InfoMessageApply"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageApply"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@if (Model.Purchases.Count() == 0)
{

}
else
{

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Menu</th>
                <th>Price</th>
                <th>Status</th>
                <th>Change Status</th>
                <th>OrderId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Purchases)
            {
            <tr>
                <td>@order.OrderName </td>
                <td>@order.Price</td>
                <td>@order.Status</td>
                <td><a class="nav-link text-dark" asp-area="" asp-controller="Purchase" asp-action="Status" asp-route-id="@order.Id">Change Status</a></td>
                <td>@order.Id</td>
            </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Back</a>
}
