@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Areas.AreaIndexViewModel

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

@if (this.TempData["InfoMessageAreas"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageAreas"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model.Areas.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var area in Model.Areas)
        {
            <div class="media col-md-4">
                <img src="@area.Image" width="100" height="80" class="mr-3" alt="@area.AreaName">
                <div class="media-body">
                    <h5 class="mt-0"><a href="@area.Url">@area.AreaName></h5>
                </div>
            </div>
        }
    </div>
}

<hr />
<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Areas" asp-action="Create">Create New Area</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="All">Back</a>
</div>