@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Cities.CityIndexViewModel

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model.Cities.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var city in Model.Cities)
        {
            <div class="media col-md-4">
                <div class="media-body">
                    <h5 class="mt-0"><a asp-controller="Areas" asp-action="All" asp-route-id="@city.Id">@city.CityName (@city.AreasCount)</a></h5>
                </div>
            </div>
        }
    </div>
}

<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="Create">CreateNewCity</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Areas" asp-action="Create">CreateArea</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">Back</a>
</div>