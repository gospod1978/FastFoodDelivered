@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Restaurants.TakeRestaurantAll

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

@if (this.TempData["InfoMessageAreas"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageAreas"]
    </div>
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model.Restaurant.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var restaurant in Model.Restaurant)
        {
            <div class="media flex-wrap w-100 align-items-center view-courier">
                <div class="media-body ml-3">
                    <div class="text-muted small">
                        <p>Full name - @restaurant.User.UserName</p>
                    </div>
                    <div class="text-muted small">
                        <p>IsCourier - @restaurant.IsRestaurnat</p>
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="IsRestaurant" asp-route-id="@restaurant.UserId">Approve</a>
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="NoRestaurant" asp-route-id="@restaurant.UserId">Decline</a>
                    </div>
                    <a class="nav-link text-dark" asp-controller="UsersData" asp-action="Index" asp-route-id="@restaurant.UserId">Documents</a>
                </div>
            </div>
        }
    </div>
}

<hr />
<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Areas" asp-action="Create">Create New Area</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Streets" asp-action="Create1">Create New Street</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="All">Back</a>
</div>

