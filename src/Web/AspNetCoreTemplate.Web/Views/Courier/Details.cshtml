@model AspNetCoreTemplate.Web.ViewModels.Couriers.CourierDetailsViewModel
@{
    this.ViewData["Title"] = "Detail Courier";
}
@if (this.TempData["InfoMessageCourier"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageCourier"]
    </div>
}

<h1>@this.ViewData["Title"]</h1>

<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="@Model.Image" width="100" height="80" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            @Model.Name
                            <div class="text-muted small">
                                <p>@Model.Phone</p>
                            </div>
                            <div class="text-muted small">
                                <p>@Model.Email</p>
                            </div>
                            <div class="text-muted small">
                                <p>@Model.Vehicle.Name</p>
                            </div>
                            <div class="text-muted small">
                                <p>@Model.City.CityName</p>
                            </div>
                            <div class="text-muted small">
                                <time datetime="@Model.Birthday.ToString("O")"></time>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>