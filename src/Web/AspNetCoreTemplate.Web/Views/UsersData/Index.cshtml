@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.UsersData.IndexDetailsViewModel

@{
    this.ViewData["Title"] = "Information about all Documents";
    var documents = this.Model.Documents;
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<h1>Full Name @Model.Name</h1>
<h3>UserName @Model.UserName</h3>

@if (Model.Documents.Count() == 0)
{
<h5>No Document in @Model.Name</h5>
}
else
{
<div class="row userDataInfo">
    @foreach (var doc in Model.Documents)
    {
    <div class="media col-md-10">
        <div class="media-body">
            <h5 class="mt-0"><a asp-controller="UsersData" asp-action="IndexPdfOne" asp-route-id="@doc.Id">@doc.Name / Created - @doc.CreatedOn</a> <a class="btn btn-danger btn-delete" asp-controller="UsersData" asp-action="AskDelete" asp-route-id="@doc.Id">Delete</a></h5>
        </div>
    </div>
        
    }
</div>
}

<div>
    <a class="btn btn-primary" asp-area="" asp-controller="UsersData" asp-action="NoActive" asp-route-id="@Model.UserId">Delete document By this User</a>
    <a class="btn btn-primary" asp-area="" asp-controller="UsersData" asp-action="Uploaud" asp-route-id="@Model.UserId">Uploud new Document</a>
    <a class="btn btn-primary" asp-area="" asp-controller="UsersData" asp-action="NavBar">Back</a>
</div>