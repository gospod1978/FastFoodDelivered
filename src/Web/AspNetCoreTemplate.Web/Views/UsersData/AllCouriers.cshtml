@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.UsersData.AllUserDataCourierViewModel

@{
    this.ViewData["Title"] = $"All Couriers";

}
@if (this.TempData["InfoMessageApply"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageApply"]
    </div>
}

<div class="text-center">
    <h1 style="margin:20px;">@this.ViewData["Title"]</h1>
</div>
@if (Model.Couriers.Count() == 0)
{

}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Area</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var courier in Model.Couriers)
            {
            <tr>
                <td>@courier.Name </td>
                <td>@courier.CityName</td>
                <td>@courier.Area.AreaName</td>
                <td>@courier.Phone</td>
                <td><a class="btn btn-primary" asp-area="" asp-controller="Courier" asp-action="Details" asp-route-id="@courier.Id">Details</a></td>

            </tr>
            }
        </tbody>
    </table>
}

@if (this.User.IsInRole(GlobalConstants.AdminRoleName) ||
this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a class="btn btn-primary" style="margin:20px;" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">Back</a>
}
else
{
    <a class="btn btn-primary" style="margin:20px;" asp-area="" asp-controller="Home" asp-action="Index">Back</a>
}