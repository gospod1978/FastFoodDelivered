@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Couriers.ChangeWorkingAreaIdViewModel
@{
    this.ViewData["Title"] = "Street Create";
    var areas = Model.Areas.Select(x => new SelectListItem(x.AreaName, x.Id.ToString()));
    var cityName = Model.CityName.ToString();
    var restaurantId = Model.RestaurantId;
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="IsActive">
    <div class="media-body">
        <h5 class="mt-0" asp-for="CityName">@cityName</h5>
        <input type="hidden" asp-for="RestaurantId" class="form-control" value="@restaurantId" />
    </div>
    <div>
        <label asp-for="AreaId"></label>
        <select asp-for="AreaId" asp-items="areas" class="form-control"></select>
        <span asp-validation-for="AreaId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>
<a class="btn btn-danger" asp-area="" asp-controller="Streets" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
