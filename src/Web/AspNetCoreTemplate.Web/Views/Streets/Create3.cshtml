@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Streets.CreateStreetInputModel
@{
    this.ViewData["Title"] = "Street Create";
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="Create3">
    <div class="media-body">
        <h5 class="mt-0">@Model.CityName</h5>
    </div>
    <div class="media-body">
        <h5 class="mt-0">@Model.AreaName</h5>
    </div>
    <div>
        <input type="hidden" asp-for="AreaId" class="form-control" value="@Model.AreaId" />
        <span asp-validation-for="AreaId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Areas" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("All") @SharedLocalizer.GetLocalizedHtmlString("Area")</a>
</form>
