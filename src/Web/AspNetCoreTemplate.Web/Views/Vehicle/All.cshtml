@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Vehicle.VehicleIndexViewModel

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

@if (Model.Vehicles.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var vehicle in Model.Vehicles)
        {
            <div class="media col-md-4">
                <div class="media-body">
                    <h5 class="mt-0">@vehicle.Name</h5>
                </div>
            </div>
        }
    </div>
}

<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Vehicle" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("CreateNewVehichle")</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>