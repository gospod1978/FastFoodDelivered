@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Users.EmailModel
@{
    ViewData["Title"] = "SendgridEmail";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });</script>

<h2>@SharedLocalizer.GetLocalizedHtmlString("SendEmail") </h2>
<form asp-action="Contact" asp-controller="Home" method="post">
    <div>
        <input type="hidden" asp-for="OriginalEmail" class="form-control" value="@Model.OriginalEmail" />
        <span asp-validation-for="OriginalEmail" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="From"></label>
        <input asp-for="From" class="form-control"/>
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="To"></label>
        <input asp-for="To" class="form-control" />
        <span asp-validation-for="To" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Subject"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Send Email" />

</form>

