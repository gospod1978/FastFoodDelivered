@model AspNetCoreTemplate.Web.ViewModels.Roles.RoleViewModel
@{
    this.ViewData["Title"] = "All Role";
}
@if (this.TempData["InfoMessage"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessage"]
    </div>
}

<div class="row">
    @foreach (var role in Model.Roles)
    {
        <div class="media col-md-6">
            <div class="media-body">
                <h5 class="mt-0"><a href="">@role.Name</a></h5>
                <a method="post"  class="btn btn-danger" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
            </div>
        </div>
    }
</div>
<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Roles" asp-action="Create">CreateNewRole</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">Back</a>
</div>