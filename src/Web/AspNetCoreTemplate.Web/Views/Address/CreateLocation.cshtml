@model AspNetCoreTemplate.Web.ViewModels.Addresses.LocationCreateInputModel
@{
    this.ViewData["Title"] = "Create Location";
}
@if (this.TempData["InfoMessageCity"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageCity"]
    </div>
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="CreateLocation">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <input asp-for="AddressId" value="@Model.AddressId"/>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>

<a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="All">Back</a>