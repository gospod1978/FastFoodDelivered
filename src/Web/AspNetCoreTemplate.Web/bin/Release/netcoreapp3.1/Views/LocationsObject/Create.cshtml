@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.LocationObjects.CreateLocationObjectInputModel
@{
    this.ViewData["Title"] = "Create Location";
    var userId = Model.UserId;
    var addressId = Model.AddressId;
}
@if (this.TempData["InfoMessageCity"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageCity"]
    </div>
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="AddressId" class="form-control" value="@addressId" />
    <input type="hidden" asp-for="UserId" class="form-control" value="@userId" />
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>

<a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>