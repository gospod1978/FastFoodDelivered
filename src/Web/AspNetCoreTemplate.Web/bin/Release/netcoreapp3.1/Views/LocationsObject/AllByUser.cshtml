@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.LocationObjects.AllLocationObject

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

@if (Model.Locations.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var location in Model.Locations)
        {
            <div class="media col-md-4">
                <div class="media-body">
                    <h5 class="mt-0"><a asp-controller="Address" asp-action="Details" asp-route-id="@location.AddressId">@location.Name</a></h5>
                </div>
            </div>
        }
    </div>
}

<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("CreateCity")</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Areas" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("AreaCreate")</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="NavBar">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>