@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.UsersData.UserDocumentPdfDetail

@{
    this.ViewData["Title"] = "UsersData";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<h1>@SharedLocalizer.GetLocalizedHtmlString("Name") @Model.RaelName</h1>
<a class="btn btn-danger" asp-area="" asp-controller="UsersData" asp-action="Download" asp-route-id="@Model.Id">@SharedLocalizer.GetLocalizedHtmlString("Download")</a>
<div class="media col-md-10">
    <div class="media-body">
        <h5 class="mt-0"><a asp-controller="UsersData" asp-action="ViewDocument" asp-route-id="@Model.Id" type="application/pdf" width="300" height="200">@Model.Name / @SharedLocalizer.GetLocalizedHtmlString("Create")Created - @Model.CreatedOn</a></h5>
    </div>
    <iframe src="@Url.Action("ViewDocument", "UsersData", new { id = Model.Id })" width="600" height="600"></iframe>
</div>


<div>
    <a class="btn btn-primary" asp-area="" asp-controller="UsersData" asp-action="Uploaud" asp-route-id="@Model.UserDataId">@SharedLocalizer.GetLocalizedHtmlString("UploudNewDocument")</a>
    <a class="btn btn-primary" asp-area="" asp-controller="UsersData" asp-action="NavBar">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>