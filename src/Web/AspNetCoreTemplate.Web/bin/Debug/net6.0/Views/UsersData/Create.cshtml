@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.UsersData.CreateUserDataViewModel
@{
    this.ViewData["Title"] = "Create Info for User";
    var userName = Model.UserUserName;
    var id = Model.UserId;
}
@if (this.TempData["InfoMessageCity"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageCity"]
    </div>
}

<h1>@this.ViewData["Title"] @userName</h1>

<form method="post" asp-action="Create">
    <div class="media-body">
        <input type="hidden" asp-for="UserId" class="form-control" value="@id" />
        <input type="hidden" asp-for="UserUserName" class="form-control" value="@userName" />
    </div>
    <div>
        <p>@Model.Messages</p>
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control col-md-4" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <hr />
    <input type="submit" class="btn btn-primary" />
</form>

<a class="btn btn-primary userDataInfo2" asp-area="" asp-controller="UsersData" asp-action="NavBar">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>