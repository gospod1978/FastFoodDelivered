@model AspNetCoreTemplate.Web.ViewModels.Addresses.CreateAddressInputModel
@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@{
    this.ViewData["Title"] = "Street Chouse";
    var areaName = Model.AreaName.ToString();
    var cityName = Model.CityName.ToString();
    var streets = Model.Streets.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
    var cityId = Model.CityId;
    var areaId = Model.AreaId;
}

<h1>@this.ViewData["Title"]</h1>
<p>If you don't see the street Create</p>
<form method="post" asp-action="Create3">
    <div class="media-body">
        <h5 class="mt-0" asp-for="CityName">@cityName</h5>
        <input type="hidden" asp-for="CityId" class="form-control" value="@cityId" />
    </div>
    <div class="media-body">
        <h5 class="mt-0" asp-for="AreaName">@areaName</h5>
        <input type="hidden" asp-for="AreaId" class="form-control" value="@areaId" />
    </div>
    <div>
        <label asp-for="StreetId"></label>
        <select asp-for="StreetId" asp-items="streets" class="form-control"></select>
        <span asp-validation-for="StreetId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Entrance"></label>
        <input asp-for="Entrance" class="form-control" />
        <span asp-validation-for="Entrance" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Flour"></label>
        <input asp-for="Flour" class="form-control" />
        <span asp-validation-for="Flour" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Apartament"></label>
        <input asp-for="Apartament" class="form-control" />
        <span asp-validation-for="Apartament" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
    <a class="btn btn-primary" asp-area="" asp-controller="Streets" asp-action="Create3" asp-route-id="@areaId">@SharedLocalizer.GetLocalizedHtmlString("CreateStreet")</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Areas" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</form>
