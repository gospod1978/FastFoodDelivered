@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Users.UserAddRoleCreateInputModel
@{
    this.ViewData["Title"] = "New Role";
    var roles = Model.Roles.Select(x => new SelectListItem(x.Name, x.Id));
}
@if (this.TempData["InfoMessageAddRole"] != null)
{
    <div class="alert alert-success">
        @this.TempData["InfoMessageAddRole"]
    </div>
}

<h1>@this.ViewData["Title"]</h1>
<form method="post" asp-action="Create">
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="RoleId"></label>
        <select asp-for="RoleId" asp-items="roles" class="form-control"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>

<a class="btn btn-primary" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>