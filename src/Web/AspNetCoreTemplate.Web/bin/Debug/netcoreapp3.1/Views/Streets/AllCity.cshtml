@using AspNetCoreTemplate.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Cities.CityIndexViewModel

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

@if (Model.Cities.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var city in Model.Cities)
        {
            <div class="media col-md-4">
                <div class="media-body">
                    <h5 class="mt-0"><a asp-controller="Areas" asp-action="All" asp-route-id="@city.Id">@city.CityName (@city.AreasCount)</a></h5>
                </div>
            </div>
        }
    </div>
}

<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Areas" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("CreateNewArea")</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Cities" asp-action="NavBar">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>