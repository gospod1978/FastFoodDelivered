@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Streets.CreateStreetInputModel
@{
    this.ViewData["Title"] = "Street Create";
    var areas = Model.Areas.Select(x => new SelectListItem(x.AreaName, x.Id.ToString()));
    var cityName = Model.CityName.ToString();
}

<h1>@this.ViewData["Title"]</h1>

<form method="post" asp-action="Create3">
    <div class="media-body">
        <h5 class="mt-0">@cityName</h5>
    </div>
    <div>
        <label asp-for="AreaId"></label>
        <select asp-for="AreaId" asp-items="areas" class="form-control"></select>
        <span asp-validation-for="AreaId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>
<a class="btn btn-danger" asp-area="" asp-controller="Streets" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
<a class="btn btn-danger" asp-area="" asp-controller="Areas" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("All") @SharedLocalizer.GetLocalizedHtmlString("Area")</a>