@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Roles.RoleCreateInputModel
@{
    this.ViewData["Title"] = "New Role";
}

<h1>@this.ViewData["Title"]</h1>
<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>

<a class="btn btn-primary" asp-area="" asp-controller="Roles" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>