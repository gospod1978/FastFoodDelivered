@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Couriers.CourierViewModel

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model.Curiers.Count() == 0)
{

}
else
{
    <div class="row">
        @foreach (var curier in Model.Curiers)
        {
            <div class="media col-md-4">
                <img src="@curier.Image" width="100" height="80" class="mr-3" alt="@curier.Name">
                <div class="media-body">
                    <h5 class="mt-0"><a href="">@curier.Name</a></h5>
                </div>
            </div>
        }
    </div>
}

<hr />
<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Courier" asp-action="Create">CreateNewCategory</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">Back</a>
</div>