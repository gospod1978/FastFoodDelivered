@using AspNetCoreTemplate.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.Couriers.CourierAllViewModel

@{
    this.ViewData["Title"] = $"Welcome to {GlobalConstants.SystemName}";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<div class="media col-md-4">
    <div class="media-body">
        <h5 class="mt-0"><a asp-area="" asp-controller="UsersData" asp-action="AllCouriers">@SharedLocalizer.GetLocalizedHtmlString("Curiers")</a></h5>
    </div>
</div>

<div class="media col-md-4">
    <div class="media-body">
        <h5 class="mt-0"><a asp-area="" asp-controller="Cities" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("Cities")</a></h5>
    </div>
</div>

<div class="media col-md-4">
    <div class="media-body">
        <h5 class="mt-0"><a asp-area="" asp-controller="Vehicle" asp-action="All">@SharedLocalizer.GetLocalizedHtmlString("Vehichles")</a></h5>
    </div>
</div>

<a class="btn btn-primary" asp-area="" asp-controller="Users" asp-action="NavBarAdmin">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>