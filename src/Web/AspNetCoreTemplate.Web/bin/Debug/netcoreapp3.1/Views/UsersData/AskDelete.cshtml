@using AspNetCoreTemplate.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using AspNetCoreTemplate.Web.Resources
@inject LocService SharedLocalizer
@inject IViewLocalizer Localizer
@model AspNetCoreTemplate.Web.ViewModels.UsersData.DocumentDeleted

@{
    this.ViewData["Title"] = "UsersData";
}

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

<div class="row">
    <h3>@SharedLocalizer.GetLocalizedHtmlString("Document") @SharedLocalizer.GetLocalizedHtmlString("Name") @Model.Name</h3>
    <div class="media col-md-10">
        <div class="media-body">
            <a class="btn btn-danger" asp-area="" asp-controller="UsersData" asp-action="Delete" asp-route-id="@Model.Id">@SharedLocalizer.GetLocalizedHtmlString("Delete")</a>
        </div>
    </div>

</div>

