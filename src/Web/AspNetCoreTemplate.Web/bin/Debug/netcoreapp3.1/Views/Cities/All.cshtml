@using AspNetCoreTemplate.Common
@model AspNetCoreTemplate.Web.ViewModels.Cities.CityIndexViewModel

@{
    this.ViewData["Title"] = $"All Cities";
}

<div class="text-center userDataInfo">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>

@if (Model.Cities.Count() == 0)
{

}
else
{
    <div class="row userDataInfo">
        @foreach (var city in Model.Cities)
        {
            <div class="media col-md-4">
                <div class="media-body">
                    <h5 class="mt-0"><a asp-controller="Areas" asp-action="All" asp-route-id="@city.Id">@city.CityName - Areas in this City(@city.AreasCount)</a></h5>
                </div>
            </div>
        }
    </div>
}

<div>
    <a class="btn btn-primary" asp-area="" asp-controller="Cities" asp-action="Create">CreateNewCity</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Areas" asp-action="Create">CreateArea</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Cities" asp-action="NavBar">Back</a>
</div>